    <script>
      <![CDATA[
	       window.addEventListener("load", function(e){ KanColleTimer.init(); WindowOnTop( window, $('window-stay-on-top').hasAttribute('checked') ); }, false);
	       window.addEventListener("unload", function(e){ KanColleTimer.destroy(); }, false);
      ]]>
